@page
@model TicketReservationSystem.Pages.Theatres.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit a theatre</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Theatres.Id" />
            <div class="form-group">
                <label asp-for="Theatres.Name" class="control-label"></label>
                <input asp-for="Theatres.Name" class="form-control" />
                <span asp-validation-for="Theatres.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Theatres.Description" class="control-label"></label>
                <input asp-for="Theatres.Description" class="form-control" />
                <span asp-validation-for="Theatres.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Theatres.Address" class="control-label"></label>
                <input asp-for="Theatres.Address" class="form-control" />
                <span asp-validation-for="Theatres.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Theatres.Seats" class="control-label"></label>
                <input asp-for="Theatres.Seats" class="form-control" />
                <span asp-validation-for="Theatres.Seats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
