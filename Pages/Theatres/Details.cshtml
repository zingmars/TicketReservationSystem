    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Theatre details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Theatres.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Theatres.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Theatres.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Theatres.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Theatres.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Theatres.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Theatres.Seats)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Theatres.Seats)
