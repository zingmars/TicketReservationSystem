@page
@model TicketReservationSystem.Pages.Theatres.DetailsModel
@using TicketReservationSystem.Authorization

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Theatre details</h1>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Theatres.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Theatres.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Theatres.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Theatres.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Theatres.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Theatres.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Theatres.Seats)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Theatres.Seats)
        </dd>
    </dl>
</div>

<h4>Related performances</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Performances[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Performances[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Performances[0].Price)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Performances) {
        <tr>
            <td>
                <a asp-page="../Performances/Details" asp-route-id="@item.Id" asp-route-returnToPage="true">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    @if (User.IsInRole(Constants.Bookkeeper) || User.IsInRole(Constants.Administrator))
    {
        <a asp-page="./Edit" asp-route-id="@Model.Theatres.Id">Edit</a><span> |</span>
    }    
        @if (@Model.returnToPage != null)
    {
        <a href="javascript:history.back()">Go back</a>
    } 
    else 
    {
        <a asp-page="./Index">Back to List</a>
    }
</div>
