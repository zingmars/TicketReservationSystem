@page
@model TicketReservationSystem.Pages.Theatres.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Vai Jūs tiešām vēlaties izdzēst šo teātri?</h1>
<br>
<br>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nosaukums
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Theatres.Name)
        </dd>
        <dt class="col-sm-2">
            Apraksts
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Theatres.Description)
        </dd>
        <dt class="col-sm-2">
            Adrese
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Theatres.Address)
        </dd>
        <dt class="col-sm-2">
            Sēdvietu skaits
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Theatres.Seats)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Theatres.Id" />
        <div class="btn-group" role="group" aria-label="Basic example">
            <input type="submit" value="Dzēst" class="btn btn-danger" />
            <a class="btn btn-secondary" role="button" asp-page="./Index">Atpakaļ</a>
        </div>
    </form>
</div>
