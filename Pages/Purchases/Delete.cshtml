@page
@model TicketReservationSystem.Pages.Purchases.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Purchases</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Seat Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Purchases.SeatId)
        </dd>
        <dt class="col-sm-2">
            Amount Paid
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Purchases.AmountPaid)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Purchases.Performance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Purchases.Performance.Name)
        </dd>
        <dt class="col-sm-2">
            Method
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Purchases.PurchaseMethod.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Purchases.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Purchases.User.UserName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Purchases.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
