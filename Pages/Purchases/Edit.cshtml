@page
@model TicketReservationSystem.Pages.Purchases.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Rediģēt pasūtījumu</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Purchases.Id" />
            <input type="hidden" asp-for="Purchases.Purchased" />
            <div class="form-group">
                <label class="control-label">Pircējs</label>
                <select asp-for="Purchases.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Purchases.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Apmaksas metode</label>
                <select asp-for="Purchases.PurchaseMethodId" class="form-control" asp-items="ViewBag.PurchaseMethodId"></select>
                <span asp-validation-for="Purchases.PurchaseMethodId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Izrāde</label>
                <select asp-for="Purchases.PerformanceId" class="form-control" asp-items="ViewBag.PerformanceId"></select>
                <span asp-validation-for="Purchases.PerformanceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Izrādes datums</label>
                <select asp-for="Purchases.PerformanceDateId" class="form-control" asp-items="ViewBag.PerformanceDateId"></select>
                <span asp-validation-for="Purchases.PerformanceDateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Sēdvietas numurs</label>
                <input asp-for="Purchases.SeatId" class="form-control" />
                <span asp-validation-for="Purchases.SeatId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Kopējā summa</label>
                <input asp-for="Purchases.AmountPaid" class="form-control" />
                <span asp-validation-for="Purchases.AmountPaid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Saglabāt" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Atgriezties atpakaļ</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
