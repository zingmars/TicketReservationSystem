@page
@model TicketReservationSystem.Pages.Purchases.NewModel

@{
    ViewData["Title"] = "Buy a ticket";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Buy a ticket for @Model.Purchases.Performance.Name!</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Purchases.PerformanceId" />
            <div class="form-group">
                <label class="control-label">Purchase method</label>
                <select asp-for="Purchases.PurchaseMethodId" class ="form-control" asp-items="ViewBag.PurchaseMethodId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Date</label>
                <select asp-for="Purchases.PerformanceDateId" class ="form-control" asp-items="ViewBag.PerformanceDateId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <b>There are no actual payment systems implemented in this prototype. Go on lad/lass, this one's on us!</b>
</div>
<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
