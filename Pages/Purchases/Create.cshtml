@page
@model TicketReservationSystem.Pages.Purchases.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Register a purchase</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">User</label>
                <select asp-for="Purchases.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Purchase method</label>
                <select asp-for="Purchases.PurchaseMethodId" class ="form-control" asp-items="ViewBag.PurchaseMethodId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Performance</label>
                <select asp-for="Purchases.PerformanceId" class ="form-control" asp-items="ViewBag.PerformanceId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Seat number</label>
                <input asp-for="Purchases.SeatId" class="form-control" />
                <span asp-validation-for="Purchases.SeatId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Amount paid</label>
                <input asp-for="Purchases.AmountPaid" class="form-control" />
                <span asp-validation-for="Purchases.AmountPaid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
