@page
@model TicketReservationSystem.Pages.Purchases.IndexModel
@using TicketReservationSystem.Authorization

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Pirkumu saraksts</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Pircējs
            </th>
            <th>
                Izrāde
            </th>
            <th>
                Datums
            </th>
            <th>
                Sēdvietas numurs
            </th>
            <th>
                Summa
            </th>
            <th>
                Ir samaksāts
            </th>
            <th>
                Apmaksas metode
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Purchases)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    <a asp-page="../Performances/Details" asp-route-id="@item.Performance.Id">@Html.DisplayFor(modelItem => item.Performance.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PerformanceDate.Begins)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeatId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountPaid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Purchased)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseMethod.Name)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Izvēlne">
                        <a role="button" asp-page="./Details" asp-route-id="@item.Id" class="btn btn-dark">Apskatīt</a>
                        <a role="button" asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Rediģēt"><i class="far fa-edit"></i></a>
                        <a role="button" asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Dzēst"><i class="fas fa-trash-alt"></i></a>                        
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
