@page
@model TicketReservationSystem.Pages.Categories.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Izveidot jaunu kategoriju</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nosaukums</label>
                <input asp-for="Categories.Name" class="form-control" />
                <span asp-validation-for="Categories.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Apraksts</label>
                <input asp-for="Categories.Description" class="form-control" />
                <span asp-validation-for="Categories.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Pievienot" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Atgriezties atpakaļ</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
