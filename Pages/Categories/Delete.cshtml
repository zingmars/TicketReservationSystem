@page
@model TicketReservationSystem.Pages.Categories.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Vai Jūs tiešām vēlaties izdzēst šo kategoriju?</h1>
<br>
<br>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nosaukums
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categories.Name)
        </dd>
        <dt class="col-sm-2">
            Apraksts
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categories.Description)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Categories.Id" />
        <div class="btn-group" role="group" aria-label="Basic example">
            <input type="submit" value="Dzēst" class="btn btn-danger" />
            <a class="btn btn-secondary" role="button" asp-page="./Index">Atpakaļ</a>
        </div>
    </form>
</div>
