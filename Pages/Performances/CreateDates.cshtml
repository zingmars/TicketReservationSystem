@page
@model TicketReservationSystem.Pages.Performances.CreateDatesModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Pievienot izrādes "@Model.PerformanceName" datumu</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="PerformanceDates.PerformanceId" value="@Model.PerformanceId" />
            <div class="form-group">
                <label class="control-label">Sākums</label>
                <input asp-for="PerformanceDates.Begins" class="form-control" />
                <span asp-validation-for="PerformanceDates.Begins" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Beigas</label>
                <input asp-for="PerformanceDates.Ends" class="form-control" />
                <span asp-validation-for="PerformanceDates.Ends" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Pievienot" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./IndexDates" asp-route-id="@Model.PerformanceId">Atgriezties atpakaļ</a>    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
