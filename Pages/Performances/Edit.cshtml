@page
@model TicketReservationSystem.Pages.Performances.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Rediģēt izrādes informāciju</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Performances.Id" />
            <div class="form-group">
                <label class="control-label">Teātris</label>
                <select asp-for="Performances.TheatreId" class="form-control" asp-items="ViewBag.TheatreId"></select>
                <span asp-validation-for="Performances.TheatreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nosaukums</label>
                <input asp-for="Performances.Name" class="form-control" />
                <span asp-validation-for="Performances.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Apraksts</label>
                <input asp-for="Performances.Description" class="form-control" />
                <span asp-validation-for="Performances.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Cena</label>
                <input asp-for="Performances.Price" class="form-control" />
                <span asp-validation-for="Performances.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Saglabāt" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Atgriezties atpakaļ</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
