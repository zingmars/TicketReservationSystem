@page
@model TicketReservationSystem.Pages.Performances.DeleteDateModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Vai Jūs tiešām vēlaties izdzēst šo datumu "@Model.PerformanceDate.Performance.Name" izrādei?</h1>
<br>
<br>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nosaukums
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PerformanceDate.Performance.Name)
        </dd>
        <dt class="col-sm-2">
            Sākums
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PerformanceDate.Begins)
        </dd>
        <dt class="col-sm-2">
            Beigas
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PerformanceDate.Ends)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="PerformanceDate.Id" />
        <div class="btn-group" role="group" aria-label="Basic example">
            <input type="submit" value="Dzēst" class="btn btn-danger" />
            <a class="btn btn-secondary" role="button" asp-page="./IndexDates" asp-route-id="@Model.PerformanceDate.PerformanceId">Atpakaļ</a>
        </div>
    </form>
</div>
