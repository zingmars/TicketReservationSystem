@page
@model TicketReservationSystem.Pages.Performances.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Performances</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Theatre</label>
                <select asp-for="Performances.TheatreId" class ="form-control" asp-items="ViewBag.TheatreId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Performances.Name" class="control-label"></label>
                <input asp-for="Performances.Name" class="form-control" />
                <span asp-validation-for="Performances.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Performances.Description" class="control-label"></label>
                <input asp-for="Performances.Description" class="form-control" />
                <span asp-validation-for="Performances.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Performances.Price" class="control-label"></label>
                <input asp-for="Performances.Price" class="form-control" />
                <span asp-validation-for="Performances.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
